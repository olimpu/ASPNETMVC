@{ 
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <base href="../../../">
    <meta charset="utf-8" />
    <title>Login | ASPNETMVC</title>
    <meta name="description" content="Login page example">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700|Roboto:300,400,500,600,700">
    <link href="~/tema/metronic6/assets/css/pages/login/login-5.css" rel="stylesheet" type="text/css" />
    <link href="~/tema/metronic6/assets/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/tema/metronic6/assets/css/style.bundle.css" rel="stylesheet" type="text/css" />
    <link rel="shortcut icon" href="~/tema/metronic6/assets/media/logos/favicon.ico" />
</head>
<body class="kt-quick-panel--right kt-demo-panel--right kt-offcanvas-panel--right kt-header--fixed kt-header-mobile--fixed kt-subheader--enabled kt-subheader--solid kt-aside--enabled kt-aside--fixed kt-aside--minimize kt-page--loading">

    <div class="kt-grid kt-grid--ver kt-grid--root kt-page">
        <div class="kt-grid kt-grid--hor kt-grid--root  kt-login kt-login--v5 kt-login--signin" id="kt_login">
            <div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--desktop kt-grid--ver-desktop kt-grid--hor-tablet-and-mobile" style="background-image: url(tema/metronic6/assets/media/bg/bg-3.jpg);">
                <div class="kt-login__left">
                    <div class="kt-login__wrapper">
                        <div class="kt-login__content">
                            <a class="kt-login__logo" href="">
                                <img src="https://i.pinimg.com/originals/06/a4/72/06a472766b5c90c0959a572eaaa6fb4b.gif" />
                            </a>
                            <h3 class="kt-login__title">JUNTE-SE A NÓS</h3>
                            <span class="kt-login__desc">
                                A melhor aplicação .Net Core & MVC que você irá conhecer!
                            </span>
                            <div class="kt-login__actions">
                                <button type="button" id="kt_login_signup" onclick="displaySignUpForm();" class="btn btn-outline-brand btn-pill">Registrar-se</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="kt-login__divider">
                    <div></div>
                </div>
                <div class="kt-login__right">
                    <div class="kt-login__wrapper">
                        <div class="kt-login__signin">
                            <div class="kt-login__head">
                                <h3 class="kt-login__title">Já possui uma conta?</h3>
                            </div>
                            <div class="kt-login__form">                                
                                <div class="form-group">
                                    <input class="form-control" type="text" placeholder="Email" id="login_email">
                                </div>
                                <div class="form-group">
                                    <input class="form-control form-control-last" type="password" placeholder="Senha" id="login_senha">
                                </div>
                                <div class="kt-login__actions">
                                    <button id="kt_login_signin_submit" onclick="login.LogarUsuario(this)" class="btn btn-brand btn-pill btn-elevate">Entrar</button>
                                </div>
                            </div>
                        </div>
                        <div class="kt-login__signup">
                            <div class="kt-login__head">
                                <h3 class="kt-login__title">Registrar</h3>
                                <div class="kt-login__desc">Informe os seguintes dados para criar a sua conta:</div>
                            </div>
                            <div class="kt-login__form">
                                <div class="form-group">
                                    <input class="form-control" type="text" placeholder="Nome completo" id="registrar_nome">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" type="text" placeholder="Email" id="registrar_email">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" type="password" placeholder="Senha" id="registrar_senha">
                                </div>
                                <div class="kt-login__actions">
                                    <button type="button" id="kt_login_signup_submit" onclick="login.Registrar(this)" class="btn btn-brand btn-pill btn-elevate">Registrar</button>&nbsp;&nbsp;
                                    <button type="button" id="kt_login_signup_cancel" onclick="displaySignInForm();" class="btn btn-outline-brand btn-pill">Cancelar</button>
                                </div>
                            </div>
                        </div>
                        <div class="kt-login__forgot">
                            <div class="kt-login__head">
                                <h3 class="kt-login__title">Esqueceu a senha né?</h3>
                                <div class="kt-login__desc">Só colocar o email que vamos lhe enviar um link para resolver isso!</div>
                            </div>
                            <div class="kt-login__form">

                                <div class="form-group">
                                    <input class="form-control" type="text" placeholder="Email" name="email" id="kt_email" autocomplete="off">
                                </div>
                                <div class="kt-login__actions">
                                    <button id="kt_login_forgot_submit" class="btn btn-brand btn-pill btn-elevate">Enviar</button>
                                    <button id="kt_login_forgot_cancel" class="btn btn-outline-brand btn-pill">Cancelar</button>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/tema/metronic6/assets/plugins/global/plugins.bundle.js" type="text/javascript"></script>
    <script src="~/tema/metronic6/assets/js/scripts.bundle.js" type="text/javascript"></script>

    <script src="~/js/util.js"></script>
    <script src="~/js/login.js"></script>

    <script>

        var baseUrl = '@string.Format("{0}://{1}{2}", Context.Request.Scheme, Context.Request.Host.Value , Url.Content("~/"))';

        var KTAppOptions = {
            "colors": {
                "state": {
                    "brand": "#22b9ff",
                    "light": "#ffffff",
                    "dark": "#282a3c",
                    "primary": "#5867dd",
                    "success": "#34bfa3",
                    "info": "#36a3f7",
                    "warning": "#ffb822",
                    "danger": "#fd3995"
                },
                "base": {
                    "label": ["#c5cbe3", "#a1a8c3", "#3d4465", "#3e4466"],
                    "shape": ["#f0f3ff", "#d9dffa", "#afb4d4", "#646c9a"]
                }
            }
        };

        function displaySignInForm() {

            var login = $('#kt_login');
            login.removeClass('kt-login--forgot');
            login.removeClass('kt-login--signup');
            login.addClass('kt-login--signin');
            KTUtil.animateClass(login.find('.kt-login__signin')[0], 'flipInX animated');
        }

        function displaySignUpForm() {

            var login = $('#kt_login');
            login.removeClass('kt-login--forgot');
            login.removeClass('kt-login--signin');
            login.addClass('kt-login--signup');
            KTUtil.animateClass(login.find('.kt-login__signup')[0], 'flipInX animated');
        }

    </script>

</body>
</html>
